@using KarmaT.Models.Blog
@model BlogCategoriaArea
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<div class="input-group mb-3">
    <form method="post" asp-action="create">
        <input asp-for="Id" class="form-control" placeholder="Id" aria-describedby="basic-addon1">
        <input asp-for="Path" type="text" class="form-control" placeholder="Path" aria-describedby="basic-addon1">
        <input asp-for="Title" type="text" class="form-control" placeholder="Title" aria-describedby="basic-addon1">
        <input asp-for="About" type="text" class="form-control" placeholder="About" aria-describedby="basic-addon1">
        <input type="submit" class="bit btn-outline-warning" value="submit"/>
    </form>
  <div class="input-group-prepend">
    <span class="input-group-text" id="basic-addon1"></span>
  </div>
</div>